<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="120"
        app:scale_base_width="400">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chooese"
            app:scale_height="60"
            app:scale_left="110"
            app:scale_top="50"
            app:scale_width="120" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chooese"
            app:scale_height="60"
            app:scale_left="230"
            app:scale_top="50"
            app:scale_width="120" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_height="470"
        app:scale_base_width="400">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호를 잊으셨나요?"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="5"
            app:scale_width="300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 인증을 통해 알 수 있습니다."
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="30"
            app:scale_width="300" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="110"
            app:scale_width="100" />

        <EditText
            android:id="@+id/user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="35"
            app:scale_left="70"
            app:scale_textsize="15"
            app:scale_top="100"
            app:scale_width="170" />

        <Button
            android:id="@+id/id_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="확인"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="250"
            app:scale_textsize="20"
            app:scale_top="100"
            app:scale_width="70" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="180"
            app:scale_width="100" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape2"
            android:text="인증번호 전송"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="70"
            app:scale_textsize="20"
            app:scale_top="170"
            app:scale_width="80" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="190"
            app:scale_textsize="15"
            app:scale_top="220"
            app:scale_width="100" />

        <TextView
            android:id="@+id/email_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--이메일입력--"
            android:textColor="#000"
            app:scale_height="35"
            app:scale_left="250"
            app:scale_textsize="15"
            app:scale_top="270"
            app:scale_width="150" />
        <Spinner
            android:id="@+id/email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:entries="@array/planets_array"
            android:drawSelectorOnTop="true"
            app:scale_height="35"
            app:scale_left="240"
            app:scale_textsize="15"
            app:scale_top="260"
            app:scale_width="150" />

        <EditText
            android:id="@+id/email3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="35"
            app:scale_left="240"
            app:scale_textsize="15"
            app:scale_top="210"
            app:scale_width="150" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:text="확인"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="300"
            app:scale_textsize="20"
            app:scale_top="310"
            app:scale_width="70" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 인증\n\t번호 확인"
            android:textColor="#95989A"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="310" />

        <EditText
            android:id="@+id/emailcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="35"
            app:scale_left="100"
            app:scale_textsize="15"
            app:scale_top="310"
            app:scale_width="190" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="35"
            app:scale_left="20"
            app:scale_textsize="15"
            app:scale_top="210"
            app:scale_width="140" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_width="400"
        app:scale_base_height="100"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:scale_height="100"
            app:scale_textsize="25"
            app:scale_top="10"
            app:scale_width="400" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>