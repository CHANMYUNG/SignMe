<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/forgetid_fl">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/pd">

            <RelativeLayout
                android:id="@+id/bbc"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/bbq"
                android:layout_toRightOf="@+id/bbc">

                <RelativeLayout
                    android:id="@+id/vixx"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <TextView
                        android:id="@+id/textViewd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/textViewc"
                        android:text="아이디를 잊으셨나요?"
                        android:textColor="#95989A"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textViewc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="간단한 정보입력을 통해 알 수 있습니다."
                        android:textColor="#95989A"
                        android:textSize="20dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/exo"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/vixx">

                    <TextView
                        android:id="@+id/momo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textColor="#95989A"
                        android:textSize="20dp" />

                    <EditText
                        android:id="@+id/forgetid_name"
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rectangle"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/sm"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/exo"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/cna"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textColor="#95989A"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:id="@+id/yg"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@+id/cna">

                        <EditText
                            android:id="@+id/forgetid_email"
                            android:layout_width="140dp"
                            android:layout_height="35dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/rectangle"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/email_whelk"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_toLeftOf="@+id/email3"
                            android:layout_toRightOf="@+id/forgetid_email"
                            android:gravity="center"
                            android:text="\@"
                            android:textColor="#95989A"
                            android:textSize="15dp" />

                        <EditText
                            android:id="@+id/email3"
                            android:layout_width="140dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/rectangle"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/black"
                            android:textColorHint="@color/gray"
                            android:textSize="15dp" />
                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/email2"
                        android:layout_width="140dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/yg"
                        android:background="@drawable/rectangle"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/planets_array"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/yg"
                        android:src="@drawable/down" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/sm">

                    <Button
                        android:layout_width="70dp"
                        android:id="@+id/fogetid_check"
                        android:layout_height="35dp"
                        android:background="@drawable/shape"
                        android:onClick="fogetidcheck"
                        android:text="확인"
                        android:textColor="#95989A"
                        android:textSize="20dp"

                        />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bbq"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"></RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#33C5F3">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>