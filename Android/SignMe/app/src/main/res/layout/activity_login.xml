<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:scale_base_height="1000"
    app:scale_base_width="1000">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_height="100"
        app:scale_base_width="600">

        <ImageButton
            android:id="@+id/id_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="BackonClick"
            android:src="@drawable/back"
            app:scale_height="100"
            app:scale_top="5"
            app:scale_width="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textColor="@color/white"
            app:scale_left="230"
            app:scale_textsize="60"
            app:scale_top="10"
            app:scale_width="240" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="CloseonClick"
            android:src="@drawable/close"
            app:scale_left="500"
            app:scale_top="5"

            />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:scale_base_height="150"
        app:scale_base_width="400">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            app:scale_left="50"
            app:scale_top="50"
            app:scale_width="300" />
    </com.ssomai.android.scalablelayout.ScalableLayout>



    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#85CBFF"
        app:scale_base_height="450"
        app:scale_base_width="580">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textColor="#000"
            app:scale_height="50"
            app:scale_left="40"
            app:scale_textsize="25"
            app:scale_top="20"
            app:scale_width="120" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password"
            android:textColor="#000"
            app:scale_height="50"
            app:scale_left="40"
            app:scale_textsize="25"
            app:scale_top="180"
            app:scale_width="120" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="85"
            app:scale_left="35"
            app:scale_textsize="40"
            app:scale_top="230"
            app:scale_width="500" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#33C5F3"
            android:onClick="loginClicked"
            android:text="@string/login"
            android:textColor="@color/white"
            app:scale_height="80"
            app:scale_textsize="30"
            app:scale_top="160"
            app:scale_width="200" />

        <EditText
            android:id="@+id/idField"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:hint="@string/id"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            app:scale_height="85"
            app:scale_left="35"
            app:scale_textsize="40"
            app:scale_top="70"
            app:scale_width="500" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:scale_base_height="100"
        app:scale_base_width="580">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="goRegisterClicked"
            android:text="회원이 아니신가요?"
            android:textColor="@color/black"
            app:scale_height="50"
            app:scale_left="60"
            app:scale_textsize="25"
            app:scale_top="30"
            app:scale_width="250" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/slash"
            app:scale_height="80"
            app:scale_left="260"
            app:scale_top="15"
            app:scale_width="80" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="goForgetClicked"
            android:text="ID/PW 찾기"
            android:textColor="@color/black"
            app:scale_height="50"
            app:scale_left="320"
            app:scale_textsize="25"
            app:scale_top="30"
            app:scale_width="200" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_height="100"
        app:scale_base_width="700">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:scale_height="100"
            app:scale_textsize="40"
            app:scale_top="15"
            app:scale_width="700" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

</LinearLayout>