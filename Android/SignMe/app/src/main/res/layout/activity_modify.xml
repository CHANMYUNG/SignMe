<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_height="100"
        app:scale_base_width="600">

        <ImageButton
            android:id="@+id/id_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="backonClick"
            android:src="@drawable/back"
            app:scale_height="100"
            app:scale_top="5"
            app:scale_width="100" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textColor="@color/white"
            app:scale_left="230"
            app:scale_textsize="45"
            app:scale_top="25"
            app:scale_width="240" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="90"
        app:scale_base_width="400">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="개인정보 변경"
            android:textColor="#95989A"
            android:textStyle="bold"
            app:scale_height="40"
            app:scale_left="10"
            app:scale_textsize="20"
            app:scale_top="55"
            app:scale_width="120" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="390"
        app:scale_base_width="400">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_blue"
            app:scale_height="380"
            app:scale_left="10"
            app:scale_top="5"
            app:scale_width="380" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="이름"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="18"
            app:scale_textsize="20"
            app:scale_top="50" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="100"
            app:scale_textsize="15"
            app:scale_top="40"
            app:scale_width="280" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="100"
            app:scale_textsize="15"
            app:scale_top="110"
            app:scale_width="280" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="전화번호"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="18"
            app:scale_textsize="20"
            app:scale_top="120" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="100"
            app:scale_textsize="15"
            app:scale_top="180"
            app:scale_width="280" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="이메일"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="18"
            app:scale_textsize="20"
            app:scale_top="190" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/rectangle"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="160"
            app:scale_textsize="15"
            app:scale_top="250"
            app:scale_width="220" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="비밀번호 변경"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="18"
            app:scale_textsize="20"
            app:scale_top="260"
            app:scale_width="150" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="비밀번호 확인"
            android:textColor="#95989A"
            app:scale_height="30"
            app:scale_left="18"
            app:scale_textsize="20"
            app:scale_top="330"
            app:scale_width="150" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:background="@drawable/rectangle"
            android:textColor="#95989A"
            app:scale_height="35"
            app:scale_left="160"
            app:scale_textsize="15"
            app:scale_top="320"
            app:scale_width="220" />


    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="95"
        app:scale_base_width="400">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#33C5F3"
            android:onClick="modifyonClick"
            android:text="수정하기"
            android:textColor="@color/white"
            app:scale_height="60"
            app:scale_left="10"
            app:scale_textsize="40"
            app:scale_top="15"
            app:scale_width="380" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>