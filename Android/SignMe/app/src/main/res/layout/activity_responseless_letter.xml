<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33C5F3"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:id="@+id/e"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/back"/>
        </RelativeLayout>
        <TextView
            android:text="가정통신문"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/e"
            android:layout_toLeftOf="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/f"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

        </RelativeLayout>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/middle"
            android:layout_above="@+id/bottom"
            android:layout_below="@+id/top"
            android:background="#FFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                />
            <RelativeLayout
                android:layout_above="@+id/d"
                android:layout_below="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/b"
                    android:layout_alignParentStart="true"
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
                <RelativeLayout
                    android:layout_toLeftOf="@+id/c"
                    android:layout_toRightOf="@+id/b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape3"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/responseless_title"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_toLeftOf="@+id/responseless_writerName"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:id="@+id/responseless_writerName"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:textSize="10dp"
                                android:gravity="bottom"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/black"/>
                            <TextView
                                android:id="@+id/responseless_openDate"
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:textSize="10dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/black"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/responseless_writerName"
                                />
                            <TextView
                                android:id="@+id/responseless_contents"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="10dp"
                                android:padding="10dp"
                                android:textColor="@color/black"
                                android:layout_below="@+id/responseless_title"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true" />
                        </RelativeLayout>


                    </ScrollView>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/c"
                    android:layout_width="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <ImageView
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottom"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#33C5F3"
            >
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>