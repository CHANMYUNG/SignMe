<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout1"
            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회  원  가  입"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:textSize="30dp"
                    android:layout_marginTop="10dp"
                    />
                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_centerInParent="true"
                    android:id="@+id/relativeLayout"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    >
                </RelativeLayout>
                <ImageView
                    android:src="@drawable/num2"
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    />

        </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:orientation="vertical"
    android:layout_below="@id/relativeLayout1"
    >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.시리얼키 입력"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#95989A"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/shape"
            android:textColorHint="@color/gray"
            android:padding="10dp"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:id="@+id/serialinput"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:hint="시리얼 키를 입력하세요"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:background="@color/colorPrimaryDark"
            android:text="확인"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:onClick="serialok"
            android:id="@+id/serialok"
            />
</FrameLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chat_black_24dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시리얼 키는 학교에서 개인적으로\n부여한 코드를 의미합니다.\n이는 본인인증에 사용됩니다."
            android:textColor="@color/gray"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            />
        </RelativeLayout>
</LinearLayout>
</RelativeLayout>