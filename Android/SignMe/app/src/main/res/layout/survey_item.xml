<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/survey_question_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/survey_question"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/survey_question_index"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioGroup
            android:id="@+id/survey_answer_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/survey_question"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/survey_answer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:width="30dp" />

            <RadioButton
                android:id="@+id/survey_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="15dp"
                android:width="30dp" />

            <RadioButton
                android:id="@+id/survey_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="15dp"
                android:width="30dp" />

            <RadioButton
                android:id="@+id/survey_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="15dp"
                android:width="30dp" />

            <RadioButton
                android:id="@+id/survey_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:layout_marginLeft="15dp"
                android:width="30dp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/survey_answer_group"
            android:layout_marginLeft="30dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우 그렇다."
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그렇다."
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보통"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아니다."
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="25dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전혀아니다."
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>