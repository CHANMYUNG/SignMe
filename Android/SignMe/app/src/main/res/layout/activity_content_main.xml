<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33C5F3"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:id="@+id/e"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back"/>
        </RelativeLayout>
        <TextView
            android:text="가정통신문"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/e"
            android:layout_toLeftOf="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/f"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout1"
        android:background="#FFF">
        <ImageView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentStart="true"
            />
        <RelativeLayout
            android:layout_above="@+id/d"
            android:layout_below="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/b"
                android:layout_alignParentStart="true"
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_toLeftOf="@+id/c"
                android:layout_toRightOf="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape3"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </ScrollView>
            </RelativeLayout>
            <ImageView
                android:id="@+id/c"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/layout4"
        android:background="#FFF">

        <Button
            android:id="@+id/signbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="testonclick"
            android:text="(인)"
            android:textColor="#000"
            android:textSize="40dp" />

        <RelativeLayout
            android:id="@+id/imageView_layout"
            android:layout_width="10dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            />

        <RelativeLayout
            android:id="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView_layout"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_toLeftOf="@+id/signbtn"
            >
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape3"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33C5F3"
       >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="제출하기"

            android:layout_gravity="center"
            android:textSize="40dp"
            android:background="@null"/>
    </RelativeLayout>
    </RelativeLayout>


</LinearLayout>