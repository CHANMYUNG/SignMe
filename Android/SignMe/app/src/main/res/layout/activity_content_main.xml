<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="#33C5F3">

            <RelativeLayout
                android:id="@+id/e"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back"
                    android:onClick="backonClick" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/f"
                android:layout_toRightOf="@+id/e"
                android:gravity="center"
                android:text="가정통신문"
                android:textSize="40dp" />

            <RelativeLayout
                android:id="@+id/f"

                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout1"
            android:layout_below="@+id/top"
            android:background="#FFF">

            <ImageView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/d"
                android:layout_below="@+id/a">

                <ImageView
                    android:id="@+id/b"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/c"
                    android:layout_toRightOf="@+id/b">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape3" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/title_text"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:gravity="center"
                                android:textColor="#000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/name_text"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_below="@+id/title_text"
                                android:layout_gravity="center_vertical"
                                android:gravity="right"
                                android:textColor="@color/black"
                                android:textSize="10dp" />

                            <TextView
                                android:id="@+id/content_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/name_text"
                                android:textColor="@color/black"
                                android:textSize="10dp" />
                        </RelativeLayout>


                    </ScrollView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/c"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/d"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/layout4"
            android:background="#FFF">

            <Button
                android:id="@+id/signbtn"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:onClick="testonclick"
                android:text="(인)"
                android:textColor="#000"
                android:textSize="40dp" />

            <RelativeLayout
                android:id="@+id/imageView_layout"
                android:layout_width="10dp"
                android:layout_height="200dp"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/signbtn"
                android:layout_toRightOf="@+id/imageView_layout">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape3" />

                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/ok"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@drawable/radio"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="참여"
                        android:textColor="#000" />

                    <RadioButton
                        android:id="@+id/no"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:button="@drawable/radio"
                        android:drawablePadding="8dp"
                        android:text="불참"
                        android:textColor="#000" />
                </RadioGroup>
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="#33C5F3">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:background="@null"
                android:onClick="spend_contentonClick"
                android:text="제출하기"
                android:textSize="40dp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>