<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33C5F3"
        android:layout_alignParentTop="true"
        >
        <RelativeLayout
            android:id="@+id/e"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true">
            <ImageButton
                android:onClick="backonClick"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back"/>
        </RelativeLayout>
        <TextView
            android:text="가정통신문"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_toRightOf="@+id/e"
            android:layout_toLeftOf="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/f"

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout1"
        android:background="#FFF">
        <ImageView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentStart="true"
            />
        <RelativeLayout
            android:layout_above="@+id/d"
            android:layout_below="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/b"
                android:layout_alignParentStart="true"
                android:layout_width="10dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_toLeftOf="@+id/c"
                android:layout_toRightOf="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape3"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/title_text"
                            android:layout_alignParentTop="true"
                            android:textColor="#000"
                            android:textSize="20dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="100dp" />
                        <TextView
                            android:id="@+id/name_text"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textSize="10dp"
                            android:gravity="right"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_below="@+id/title_text"/>
                        <TextView
                            android:id="@+id/content_text"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/name_text"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            />
                    </RelativeLayout>


                </ScrollView>
            </RelativeLayout>
            <ImageView
                android:id="@+id/c"
                android:layout_width="10dp"
                android:layout_alignParentEnd="true"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/layout4"
        android:background="#FFF">

        <Button
            android:id="@+id/signbtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:onClick="testonclick"
            android:text="(인)"
            android:textColor="#000"
            android:textSize="40dp" />

        <RelativeLayout
            android:id="@+id/imageView_layout"
            android:layout_width="10dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            />

        <RelativeLayout
            android:id="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView_layout"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_toLeftOf="@+id/signbtn"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape3"/>
            <RadioGroup
                android:id="@+id/radiogroup"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:id="@+id/ok"
                    android:text="참여"
                    android:textColor="#000"
                    android:button="@drawable/radio"
                    android:drawablePadding="8dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center_vertical"/>
                <RadioButton
                    android:id="@+id/no"
                    android:text="불참"
                    android:button="@drawable/radio"
                    android:drawablePadding="8dp"
                    android:textColor="#000"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
            </RadioGroup>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout4"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#33C5F3"
       >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="제출하기"
            android:onClick="spend_contentonClick"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    </RelativeLayout>


</LinearLayout>