<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:scale_base_width="1000"
    app:scale_base_height="1000"
    >
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_height="100"
        app:scale_base_width="600">

        <ImageButton
            android:id="@+id/id_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="BackonClick"
            android:src="@drawable/back"
            app:scale_height="100"
            app:scale_top="5"
            app:scale_width="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textColor="@color/white"
            app:scale_left="230"
            app:scale_textsize="60"
            app:scale_top="10"
            app:scale_width="240" />


    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="250"
        app:scale_base_width="400"></com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_width="400"
        app:scale_base_height="325"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="개인정보 변경"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>