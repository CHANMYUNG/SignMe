<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:scale_base_height="1000"
    app:scale_base_width="1000">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33C5F3"
        app:scale_base_height="100"
        app:scale_base_width="600">

        <ImageButton
            android:id="@+id/id_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:onClick="backonClick"
            android:src="@drawable/back"
            app:scale_height="100"
            app:scale_top="5"
            app:scale_width="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="마이페이지"
            android:textColor="@color/white"
            app:scale_left="220"
            app:scale_textsize="45"
            app:scale_top="25"
            app:scale_width="240" />


    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="300"
        app:scale_base_width="400">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shape2"
            app:scale_height="200"
            app:scale_left="100"
            app:scale_top="30"
            app:scale_width="200" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ooo고등학교 홍길동님"
            android:textColor="@color/black"
            app:scale_height="40"
            app:scale_left="150"
            app:scale_textsize="15"
            app:scale_top="250"
            app:scale_width="200" />
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:scale_base_height="325"
        app:scale_base_width="400">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="개인정보 변경"
            android:textColor="#95989A"
            app:scale_height="40"
            app:scale_left="40"
            app:scale_textsize="20"
            app:scale_top="50"
            app:scale_width="150" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="신청서 수정"
            android:textColor="#95989A"
            app:scale_height="40"
            app:scale_left="40"
            app:scale_textsize="20"
            app:scale_top="150"
            app:scale_width="150" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="개인정보 변경하기"
            android:textColor="@color/black"
            app:scale_height="40"
            app:scale_left="45"
            app:scale_textsize="20"
            app:scale_top="85"
            app:scale_width="300" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:onClick="mypageonClick1"
            android:textColor="@color/black"
            app:scale_height="40"
            app:scale_left="40"
            app:scale_textsize="20"
            app:scale_top="80"
            app:scale_width="300" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="최근 신청한 신청서 목록"
            android:textColor="@color/black"
            app:scale_height="40"
            app:scale_left="45"
            app:scale_textsize="20"
            app:scale_top="185"
            app:scale_width="300" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:onClick="mypageonClick1"
            android:textColor="@color/black"
            app:scale_height="40"
            app:scale_left="40"
            app:scale_textsize="20"
            app:scale_top="180"
            app:scale_width="300" />
    </com.ssomai.android.scalablelayout.ScalableLayout>
</LinearLayout>